<%- include('partials/header.ejs') -%>

  <div class="w-2/3 mx-auto my-12">
    <% posts.forEach( post => { %> 
      <div class="mb-4">
        <div class="border-l-4 border-purple-900 rounded-lg shadow p-4 w-full">
          <h3 class="text-lg font-black"><%= post.title %></h3>
          <p>
            <% if( post.body.length > 200 ) { %>
              <%= post.body.substring(0,100) + "..." %>
              <a href="/post/<%= post._id%>" class="text-purple-700 hover:text-purple-900"> Read more</a>
            <% } else { %>
              <%= post.body %>
            <% } %>
          </p>
        </div>
      </div>
    <% }); %>

  </div>
 
<%- include('partials/footer.ejs') -%>  
