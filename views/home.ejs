<%- include('partials/header.ejs') -%>

<div class="">
  <h2>Home</h2>
  <p><%= homeStartingContent %></p>
  <% posts.forEach( post => { %>
    <div class="post">
      <h3><%= post.title %></h3>
      <p>
        <%= post.body.substring(0,100) + "..." %>
        <a href="/post/<%= post.title.toLowerCase().split(" ").join("-") %>"> Read more</a>
      </p>
    </div>
  <% }); %>
</div>

